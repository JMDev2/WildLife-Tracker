{{#partial "content"}}

    <div class="view" style="background-image: url('/images/jaguar2.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
        <!-- Mask & flexbox options-->
        <div class="mask rgba-black-light align-items-center">
            <!-- Content -->
            <div class="container">
                <!--Grid row-->
                <div class="indexRow">
                    <!--Grid column-->
                    <div class="col-md-12 mb-4 white-text text-center">
                        <h3 class="h3-reponsive text-warning text-uppercase font-weight-bold mb-0 pt-md-5 pt-5 animated wobble"><strong>Add Animal:  </strong></h3>
                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-4">
                                <div class="content">
                                    <h3 class="text-center">Add Animal</h3>
                                    //form
                                    <form action="/endangeredAnimaldetails/new" method="post">
                                        <div class="form-group">
                                            <label for="name">Name:</label>
                                            <input type="text" name="name" class="form-control transparentInputFields">
                                        </div>
                                        <div class="form-group ">
                                            <label for="health">Health:</label>
                                            <select id="health" name="health" type="text" class="form-control transparentInputFields">
                                                <option value="Healthy">Healthy</option>
                                                <option value="Okay">Okay</option>
                                                <option value="Ill">Ill</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="age">Age:</label>
                                            <select id="age" name="age" type="text" class="form-control transparentInputFields">
                                                <option value="Newborn">Newborn</option>
                                                <option value="Young">Young</option>
                                                <option value="Adult">Adult</option>
                                            </select>
                                        </div>
                                        <button class="btn btn-info " type="submit" name="add-animal">Add</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
            </div>
            <!-- Content -->
        </div>
        <!-- Mask & flexbox options-->
    </div>
    <!-- Full Page Intro -->
    </header>
    <!-- Main navigation -->



{{/partial}}

